# ex_project
package chapter2;

public class DoubleEx1 {

	public static void main(String[] args) {
		double dnum = 3.14;
		float fnum = 3.14F; // 3.14 뒤에 붙은 F는 식별자
		
		System.out.println(dnum);
		System.out.println(fnum);

	}

}
// 자바에서 실수는 double형을 기본으로 사용 

package chapter2;

public class DoubleEx2 {

	public static void main(String[] args) {
		double dnum = 1;
		
		for(int i =0; i <10000; i++) {
			dnum = dnum + 0.1;
		}
		System.out.println(dnum);
	}

}
// 지수와 가수로 나타내는 부동 소수점 방식은 약간의 오차가 발생 할 수 있다 원래 값은 1001


package chapter2;

public class DoubleEx3 {

	public static void main(String[] args) {
		boolean isMarried = true;
		System.out.println(isMarried);

	}

}
// boolean형 변수는 true나 false만 대입가능하고 결과값도 이것으로만 나타난다.
